<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>BioKey Dashboard</title>
  <link rel="stylesheet" href="/dashboard.css" />
</head>
<body>
  <main class="container">
    <header class="topbar panel">
      <div>
        <h1>BioKey Dashboard</h1>
        <p id="statusLine">Loading status...</p>
      </div>
      <div class="top-actions">
        <label for="modeToggle">Control Mode</label>
        <input id="modeToggle" type="checkbox" />
        <a href="/admin/login">Admin Login</a>
        <form method="post" action="/admin/logout">
          <button type="submit">Logout</button>
        </form>
      </div>
    </header>

    <section class="grid">
      <article class="panel">
        <h2>Overview</h2>
        <pre id="overviewBox">Loading...</pre>
      </article>

      <article class="panel">
        <h2>User Detail</h2>
        <div class="row">
          <input id="userIdInput" type="number" min="1" placeholder="User ID" />
          <button id="loadUserBtn" type="button">Load</button>
        </div>
        <pre id="userBox">No user selected.</pre>
      </article>

      <article class="panel full">
        <h2>Live Feed</h2>
        <table>
          <thead>
            <tr>
              <th>Time</th>
              <th>User</th>
              <th>Outcome</th>
              <th>Score</th>
              <th>Coverage</th>
              <th>Pairs</th>
              <th>IP</th>
              <th>Request ID</th>
              <th>Label</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="feedBody"></tbody>
        </table>
      </article>

      <article class="panel full">
        <h2>Control Panel</h2>
        <div class="controls">
          <input id="controlUserId" type="number" min="1" placeholder="User ID" />
          <button data-action="recalibrate">Recalibrate Thresholds</button>
          <button data-action="reset">Reset User Profile</button>
          <button data-action="export">Export Dataset</button>
          <button data-action="evaluate">Run Evaluation</button>
          <button data-action="cleanup">Cleanup Expired Sessions</button>
        </div>
        <pre id="controlBox">Control mode is disabled.</pre>
      </article>
    </section>
  </main>

  <script src="/dashboard.js"></script>
</body>
</html>

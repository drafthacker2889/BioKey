<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>BioKey Dashboard</title>
  <link rel="stylesheet" href="/dashboard.css" />
</head>
<body>
  <main class="container">
    <header class="panel topbar">
      <div class="topbar-title">
        <p class="eyebrow">BioKey Security Console</p>
        <h1>Live Monitoring Dashboard</h1>
        <p id="statusLine" class="muted">Loading status...</p>
      </div>
      <div class="top-actions">
        <span id="systemPill" class="pill">System: --</span>
        <span id="adminPill" class="pill">Admin: --</span>
        <label class="switch" for="modeToggle">
          <input id="modeToggle" type="checkbox" />
          <span class="slider"></span>
          <span>Control Mode</span>
        </label>
        <a class="btn btn-secondary" href="/admin/login">Admin Login</a>
        <form method="post" action="/admin/logout" class="inline-form">
          <button type="submit" class="btn">Logout</button>
        </form>
      </div>
    </header>

    <section class="grid">
      <article class="panel">
        <div class="panel-head">
          <h2>Overview</h2>
          <span class="muted" id="liveMeta">Waiting for refresh...</span>
        </div>
        <div id="overviewGrid" class="overview-grid"></div>
        <div class="outcomes-wrap">
          <h3>7d Outcomes</h3>
          <div id="outcomesList" class="chips"></div>
        </div>
        <pre id="overviewBox" class="json-box">Loading...</pre>
      </article>

      <article class="panel">
        <h2>User Detail</h2>
        <div class="row">
          <input id="userIdInput" type="number" min="1" placeholder="User ID" />
          <button id="loadUserBtn" type="button" class="btn">Load User</button>
        </div>
        <pre id="userBox" class="json-box scroll-box">No user selected.</pre>
      </article>

      <article class="panel full">
        <div class="panel-head">
          <h2>Live Feed</h2>
          <span class="muted">Auto-refresh: 6s â€¢ Biometric + auth attacks</span>
        </div>
        <div class="table-wrap feed-scroll">
        <table class="feed-table">
          <thead>
            <tr>
              <th>Time</th>
              <th>User</th>
              <th>Outcome/Verdict</th>
              <th>Score</th>
              <th>Coverage</th>
              <th>Pairs</th>
              <th>IP</th>
              <th>Request ID</th>
              <th>Label</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="feedBody"></tbody>
        </table>
        </div>
      </article>

      <article class="panel full">
        <h2>Control Panel</h2>
        <div class="controls">
          <input id="controlUserId" type="number" min="1" placeholder="User ID" />
          <button data-action="recalibrate" class="btn">Recalibrate Thresholds</button>
          <button data-action="reset" class="btn btn-danger">Reset User Profile</button>
          <button data-action="export" class="btn btn-secondary">Export Dataset</button>
          <button data-action="evaluate" class="btn btn-secondary">Run Evaluation</button>
          <button data-action="cleanup" class="btn btn-secondary">Cleanup Expired Sessions</button>
        </div>
        <pre id="controlBox" class="json-box">Control mode is disabled.</pre>
      </article>
    </section>
  </main>

  <script src="/dashboard.js"></script>
</body>
</html>
